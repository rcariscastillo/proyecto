import os
import pandas as pd
import matplotlib as plt
import numpy as np
from matplotlib.ticker import MaxNLocator



"""
FUNCION QUE CREA MENUS
lista:
list_opciones donde viendene de la forma:
(0) opcion 
(n-1) opnion n

Ejemplo:
['suma', 'resta', 'multiplicacion','resta']

text_solicitud

texto de solicitud
tex="incerte un numero"

def MenuMaker(list_opciones,text_solicitud):
    os.system ("cls")
    while(1):
        counter=0
        print("************** MENU *****************\n")
        for item in list_opciones:
            print("( "+str(counter)+" ) "+item)
            counter+=1
               
        opcion=int(input(text_solicitud))
        if((opcion>=0)and (opcion<=len(list_opciones)-1)):
            break
        print("incerte un valor valido \n")
        os.system ("cls")
    return opcion
    def MenuOpciones():#menu principal
        opcion=MenuMaker(["Contagios Ultimos 7 dias",
                  "Rango Etario con mas contagio","Sexo mayor contagio",
                  "Sexo y Rango Etario con mayor contagio",
                  "Sexo y Rango Etario en etapa clinica",
                  "salir"],
                  "Seleccione una opcion ")
        return opcion
def MenuSexo():# menu para escoger los sexos
    sexo=MenuMaker(["Hombres","Mujeres"],"Seleccione un sexo ")
    if(sexo==0):
        sexo="M"
    if(sexo==1):
        sexo="F"
    return sexo
#archivos .csv 
#Generar Data framme 1  o 2 para segun sea el caso del .csv a escoger  

def CrearDataFrame(opcion):
    if(opcion==1):
        df=pd.read_csv("CasosGeneroEtario.csv",index_col="Grupo de edad")
    if(opcion==2):
        df=pd.read_csv("CasosGeneroEtarioEtapaClinica.csv",index_col="Grupo de edad")
        df=df.fillna(0)
        
    return df

#funcion que mostrara el rango etario
def MostrarRangoEdad(df):
    print("********* Rango Etario **************\n")
    for item in df.index.values[0:17]:
        print(item)
    print("*************************************\n")
    opcion=input("Escoja una edad ")
    return opcion
        

           


    
